<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <TextView
        android:id="@+id/text_for_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Finally Next Visit to Doctor !!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    <DatePicker
        android:id="@+id/datePicker_treatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_for_user"
        android:layout_margin="25dp">


    </DatePicker>

    <TextView
        android:id="@+id/tv_selectedDateTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datePicker_treatment"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text="Picked Date"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

</RelativeLayout>
